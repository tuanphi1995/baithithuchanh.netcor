@model IEnumerable<ComicSystem.Models.ComicBook>

@{
    ViewData["Title"] = "Danh sách truyện tranh";
}

<h2>Danh sách truyện tranh</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Tác giả</th>
            <th>Giá thuê</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comicBook in Model)
        {
            <tr>
                <td>@comicBook.Title</td>
                <td>@comicBook.Author</td>
                <td>@comicBook.PricePerDay.ToString("C")</td>
                <td>
                    <a href="/ComicBooks/Edit/@comicBook.ComicBookID" class="btn btn-primary">Sửa</a>
                    <a href="/ComicBooks/Delete/@comicBook.ComicBookID" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/ComicBooks/Create" class="btn btn-success">Thêm sách mới</a>
