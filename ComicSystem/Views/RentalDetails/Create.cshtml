@model ComicSystem.Models.RentalDetail

@{
    ViewData["Title"] = "Thêm sách vào phiếu thuê";
}

<h2>Thêm sách vào phiếu thuê</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="RentalID" />
    <div class="form-group">
        <label for="ComicBookID">Mã sách</label>
        <input type="number" class="form-control" asp-for="ComicBookID" required />
    </div>
    <div class="form-group">
        <label for="Quantity">Số lượng</label>
        <input type="number" class="form-control" asp-for="Quantity" required />
    </div>
    <div class="form-group">
        <label for="PricePerDay">Giá thuê (VNĐ)</label>
        <input type="number" class="form-control" asp-for="PricePerDay" required />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
