@model ComicSystem.Models.RentalDetail

@{
    ViewData["Title"] = "Thêm sách vào phiếu thuê";
}

<h2>Thêm sách vào phiếu thuê</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="RentalID" />
    <div class="form-group">
        <label for="ComicBookID">Chọn sách:</label>
        <select id="ComicBookID" name="ComicBookID" class="form-control">
            @foreach (var comicBook in ViewBag.ComicBooks)
            {
                <option value="@comicBook.ComicBookID">@comicBook.Title</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Quantity">Số lượng:</label>
        <input type="number" class="form-control" asp-for="Quantity" required />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
