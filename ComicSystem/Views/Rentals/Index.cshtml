@model IEnumerable<ComicSystem.Models.Rental>

@{
    ViewData["Title"] = "Danh sách thuê sách";
}

<h2>Danh sách thuê sách</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã thuê</th>
            <th>Khách hàng</th>
            <th>Ngày thuê</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rental in Model)
        {
            <tr>
                <td>@rental.RentalID</td>
                <td>@rental.Customer?.FullName</td>
                <td>@rental.RentalDate.ToShortDateString()</td>
                <td>@rental.Status</td>
                <td>
                    <a href="/Rentals/Details/@rental.RentalID" class="btn btn-primary">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Rentals/Create" class="btn btn-success">Thêm phiếu thuê</a>
