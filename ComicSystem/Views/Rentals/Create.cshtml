@model ComicSystem.Models.Rental

@{
    ViewData["Title"] = "Tạo phiếu thuê";
}

<h2>Tạo phiếu thuê</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="CustomerID">Khách hàng</label>
        <input type="number" class="form-control" asp-for="CustomerID" required />
    </div>
    <div class="form-group">
        <label for="Status">Trạng thái</label>
        <input type="text" class="form-control" asp-for="Status" required />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
