@model ComicSystem.Models.ComicBook

@{
    ViewData["Title"] = "Chỉnh sửa thông tin sách";
}

<h2>Chỉnh sửa thông tin sách</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ComicBookID" />
    <div class="form-group">
        <label for="Title">Tên sách</label>
        <input type="text" class="form-control" asp-for="Title" required />
    </div>
    <div class="form-group">
        <label for="Author">Tác giả</label>
        <input type="text" class="form-control" asp-for="Author" required />
    </div>
    <div class="form-group">
        <label for="PricePerDay">Giá thuê</label>
        <input type="number" class="form-control" asp-for="PricePerDay" step="0.01" required />
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
</form>
