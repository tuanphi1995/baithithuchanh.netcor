@model IEnumerable<ComicSystem.Models.Customer>

@{
    ViewData["Title"] = "Danh sách khách hàng";
}

<h2>Danh sách khách hàng</h2>

<table class="table">
    <thead>
        <tr>
            <th>Họ Tên</th>
            <th>Số Điện Thoại</th>
            <th>Ngày Đăng Ký</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FullName</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.RegistrationDate.ToShortDateString()</td>
                <td>
                    <a href="/Customers/Edit/@customer.CustomerID" class="btn btn-primary">Sửa</a>
                    <a href="/Customers/Delete/@customer.CustomerID" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Customers/Create" class="btn btn-success">Thêm khách hàng</a>
